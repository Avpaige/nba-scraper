  <div class="container">
    <div class="jumbotron">
      <h1>NBA Scraper</h1>
      <h3>Here's the most recent news in the NBA!</h3>
      <hr>
     </div>
    <div class="row">

      
      <div class="col-lg-12">

        <div class="card">
          <div class="card-header">
            Latest Articles
          </div>
          <div class="card-body" id="well-section">
             {{#each renderData}}
                <div class="headline">
                    <p>{{title}}</p>
                     <a href={{link}} target="_blank">Jump to the full story.</a>
                    <button id="save">Save Article</button>
                </div>
             {{/each}}
           </div>
        </div>
      </div>
    </div>
  </div>

