<div class="container">
  <div class="jumbotron">
    <h1>NBA Scraper</h1>
    <h3>The latest news, right at your fingertips!</h3>
    <hr>
  </div>
  <div class="row">


    <div class="col-lg-12">

      <div class="card">
        <div class="card-header">
          Latest Articles
        </div>
        <div class="card-body" id="well-section">
          {{#each renderData}}
          <div class="headline">
            <p>{{title}}</p>
            <a href={{link}} target="_blank">Jump to the full story.</a>
            <button type="button" class="btn btn-success" id="save">Save Article</button>
          </div>
          <br>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>